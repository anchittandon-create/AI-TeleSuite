{
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 180,
      "memory": 512
    }
  },
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cleanup-cache",
      "schedule": "0 0 * * *"
    }
  ]
}
